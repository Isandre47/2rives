{% extends 'baseAdmin.html.twig' %}

{% block title %}Emission index{% endblock %}

{% block body %}
    <h1>Emission index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Resume</th>
            <th>Vignette</th>
            <th>Tags</th>
            <th>date</th>
            {#<th>Images</th>#}
            {#<th>Lien</th>#}
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {#{{ dump(list) }}#}
        {% for emission in list.list %}
            <tr>
                <td>{{ emission.id }}</td>
                <td>{{ emission.title }}</td>
                <td>{{ emission.owner }}</td>
                {#<td>{{ emission.category.type }}</td>#}
                <td>
                    <img src="{{ emission.medias }}" alt="">
                </td>
                <td>
                    {% for tag in emission.tag %}
                        {{ tag }}
                    {% endfor %}
                </td>
                <td>{{ emission.updated_time }}</td>
                <td>
                    <a href="{{ path('emission_show', {'id': emission.id}) }}">Voir</a>
                    <a href="{{ path('emission_edit', {'id': emission.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emission_new') }}">Create new</a>
{% endblock %}
